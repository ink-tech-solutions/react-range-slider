{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "ES2022",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node10",
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
